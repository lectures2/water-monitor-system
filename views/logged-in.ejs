    </nav>

    <div class="container">
        <h2 class="username">Welcome!</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h2>Temperature</h2>
                    </div>
                    <div class="card-body">
                        <canvas id="temperatureChart"></canvas>
                        <h2 id="temperatureValue">--</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h2>pH</h2>
                    </div>
                    <div class="card-body">
                        <canvas id="phChart"></canvas>
                        <h2 id="phValue">--</h2>
                    </div>
