    </div>

    <!-- Options Menu -->
    <div class="options-menu" onclick="toggleOptionsMenu()">
        <i class="fas fa-ellipsis-v"></i>
        <ul id="optionsMenu" style="display: none;">
            <li><a href="#" onclick="downloadReport()"><i class="fas fa-database"></i> View Data Collected</a></li>
            <li><a href="accupdate.html"><i class="fas fa-address-card"></i> Account Details</a></li>
        </ul>
    </div>

    <button class="logout-btn" onclick="logout()"><i class="fas fa-sign-out-alt"></i> Logout</button>

    

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        // Chart.js initialization
        let temperatureChart, phChart, salinityChart;
        let temperatureData = [];
        let phData = [];
        let salinityData = [];

        // Initialize Charts
        function initializeCharts() {
            const ctxTemperature = document.getElementById('temperatureChart').getContext('2d');
            temperatureChart = new Chart(ctxTemperature, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Temperature (Â°C)',
                        data: temperatureData,
                        backgroundColor: 'rgba(255, 99, 132, 0.2)',
                        borderColor: 'rgba(255, 99, 132, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Time'
                            }
                        },
                        y: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Temperature (Â°C)'
                            }
                        }
                    }
                }
            });

            const ctxPh = document.getElementById('phChart').getContext('2d');
            phChart = new Chart(ctxPh, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'pH',
                        data: phData,
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Time'
                            }
                        },
                        y: {
                            display: true,
                            title: {
                                display: true,
                                text: 'pH'
                            }
                        }
                    }
                }
            });

            const ctxSalinity = document.getElementById('salinityChart').getContext('2d');
            salinityChart = new Chart(ctxSalinity, {
                type: 'line',
                data: {
                    labels: [],
                    datasets: [{
                        label: 'Salinity (ppt)',
                        data: salinityData,
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    scales: {
                        x: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Time'
                            }
                        },
                        y: {
                            display: true,
                            title: {
                                display: true,
                                text: 'Salinity (ppt)'
                            }
                        }
                    }
                }
            });
        }

        // Update Charts and Values
        function updateCharts() {
            const timeNow = new Date().toLocaleTimeString();

            const randomTemperature = (Math.random() * 10 + 20).toFixed(2);
            const randomPh = (Math.random() * 4 + 5).toFixed(2);
            const randomSalinity = (Math.random() * 30).toFixed(2);

            if (temperatureData.length >= 10) {
                temperatureData.shift();
                phData.shift();
                salinityData.shift();
            }

            temperatureData.push(randomTemperature);
            phData.push(randomPh);
            salinityData.push(randomSalinity);

            temperatureChart.data.labels.push(timeNow);
            phChart.data.labels.push(timeNow);
            salinityChart.data.labels.push(timeNow);

            document.getElementById('temperatureValue').innerText = randomTemperature + ' Â°C';
            document.getElementById('phValue').innerText = randomPh;
            document.getElementById('salinityValue').innerText = randomSalinity + ' ppt';

            temperatureChart.update();
            phChart.update();
            salinityChart.update();
        }

        function randomizeOutput() {
            setInterval(updateCharts, 15000); // Update values every 2 seconds
        }

        function toggleOptionsMenu() {
            const menu = document.getElementById('optionsMenu');
            if (menu.style.display === 'none' || menu.style.display === '') {
                menu.style.display = 'block';
            } else {
                menu.style.display = 'none';
            }
        }

        function downloadReport() {
            const data = {
                temperature: temperatureData,
                ph: phData,
                salinity: salinityData
            };
            const json = JSON.stringify(data);
            const blob = new Blob([json], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'data_report.json';
            a.click();
            URL.revokeObjectURL(url);
        }

        function logout() {
             // Redirect to login page
        window.location.href = 'login.html';
        }

        $(document).ready(function () {
            initializeCharts();
            randomizeOutput();
        });
    </script>
</body>

</html>
